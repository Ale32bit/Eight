<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <PackageVersion>0.0.3-alpha</PackageVersion>
        <Title>Eight</Title>
        <Authors>AlexDevs</Authors>
        <LangVersion>9</LangVersion>
        <TargetFramework>net5.0</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="KeraLua" Version="1.2.10" />
        <PackageReference Include="SDL2-CS" Version="2.0.0" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="lua\**">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <Reference Include="SDL2-CS, Version=0.0.0.0, Culture=neutral, PublicKeyToken=null">
            <HintPath>libs\SDL2-CS.dll</HintPath>
        </Reference>
    </ItemGroup>

    <ItemGroup>
        <Compile Remove="out\**" />
        <Compile Update="src\LuaLibs\ScreenShapes.cs">
          <DependentUpon>Screen.cs</DependentUpon>
        </Compile>
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Remove="out\**" />
    </ItemGroup>

    <ItemGroup>
        <None Remove="out\**" />
    </ItemGroup>

    <Import Project="..\Libraries\Libraries.projitems" Label="Shared" />

    <PropertyGroup>
        <ApplicationIcon>icon.ico</ApplicationIcon>
    </PropertyGroup>


</Project>
